{% extends 'base.html.twig' %}
{% block body %}
    <h2 class="page-header" style="margin-top:20px; margin-bottom:20px;">{{ page }}</h2>
    <table class="table table-striped" style="margin-top: 20px;">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col">Active</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <th scope="row">{{ user.id }}</th>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ (user.isActive == 1)? 'Yes':'No' }} </td>
                <td>
                    <a href="/task/edit/{{ user.id }}" class="btn btn-primary">edit</a>
                    <a href="/task/delete/{{ user.id }}" class="btn btn-danger">delete</a>
                </td>
            </tr>

        {% endfor %}
        </tbody>
    </table>


    <div class="col-sm-12" style="margin-top:20px; margin-bottom:20px;">
        <a href="/user/register" class="btn btn-primary">New User</a>
    </div>
{% endblock %}